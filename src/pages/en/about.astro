---
import Layout from "../../presentation/layouts/Layout.astro";
import AboutHobbies from "../../presentation/components/molecules/AboutHobbies.astro";
import ImageWEffect from "../../presentation/components/atoms/ImageWEffect.astro";
import TitlePage from "../../presentation/components/atoms/TitlePage.astro";
import Divider from "../../presentation/components/atoms/Divider.astro";
import { getLangFromUrl, useTranslations } from "../../data/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Sobre mi">
  <div class="container">
    <TitlePage title="Wilfer Daniel Ciro Maya" transition_name="me-name" />
    <h3 transition:name="me-profession">{t("generic.fullstack_developer")}</h3>
    <Divider />
    <div class="photo-container">
      <ImageWEffect />
    </div>
    <div transition:name="me-description">
      <p>
        {t("about.description_1")}
      </p>
      <p>
        {t("about.description_2")}
      </p>
    </div>
    <AboutHobbies />
  </div>
</Layout>

<style>
  .container {
    min-height: 100vh;
    max-width: 740px;
    width: 90%;
    margin: auto;
    gap: 50px;
    padding-top: 70px;
  }
  h2,
  h3 {
    margin: 5px;
  }
  h3 {
    font-weight: 300;
  }
  p {
    color: var(--text-color3);
  }

  .photo-container {
    width: 20vw;
    height: 20vw;
    margin: auto;
  }

  @media (max-width: 740px) {
    .container {
      display: block;
      height: auto;
      width: 90%;
      padding-top: 90px;
    }
    .photo-container {
      width: 65vw;
      height: 65vw;
    }
  }
</style>
