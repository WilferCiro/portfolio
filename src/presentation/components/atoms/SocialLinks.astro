---
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import GitlabIcon from "./icons/GitlabIcon.astro";
import MediumLogoIcon from "./icons/MediumLogoIcon.astro";
import Tooltip from "./Tooltip.astro";
---

<ul>
  <li>
    <a
      href="https://www.linkedin.com/in/wilfer-ciro/"
      target="_blank"
      title="Ir a LinkedIn"
      ><Tooltip title="LinkedIn"><LinkedInIcon /></Tooltip>
    </a>
  </li>
  <li>
    <a href="https://github.com/WilferCiro" target="_blank" title="Ir a Github"
      ><Tooltip title="Github"><GithubIcon /></Tooltip>
    </a>
  </li>
  <li>
    <a href="https://gitlab.com/WilferCiro/" target="_blank" title="Ir a gitlab"
      ><Tooltip title="Gitlab"><GitlabIcon /></Tooltip>
    </a>
  </li>
  <li>
    <a href="mailto:wilcirom@gmail.com" target="_blank" title="Enviar un Email"
      ><Tooltip title="Email"><EmailIcon /></Tooltip>
    </a>
  </li>
  <li>
    <a href="https://medium.com/@wilcirom" target="_blank" title="Ir a Medium">
      <Tooltip title="Medium"><MediumLogoIcon /></Tooltip>
    </a>
  </li>
</ul>

<style>
  ul {
    display: flex;
    gap: 15px;
    padding: 0px;
    margin: 0px;
    list-style: none;
    align-items: center;
  }
  ul li {
    height: 26px;
  }
  ul li a {
    color: var(--text-color2);
    display: block;
  }
  ulli a: hover {
    color: var(--text-color3);
  }
</style>
