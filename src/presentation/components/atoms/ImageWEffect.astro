---
import { Image } from "astro:assets";
import Photo1 from "../../media/images/me2.jpg";

interface Props {
  transition?: string;
}
const { transition } = Astro.props;
---

<Image
  src={Photo1}
  alt="Foto de Wilfer Ciro"
  transition:name={transition || "me-photo"}
  class="img"
/>

<style>
  .img {
    -webkit-mask: url(../../media/images/bg-photo.svg) no-repeat center;
    mask: url(../../media/images/bg-photo.svg) no-repeat center;
    width: 100%;
    height: 100%;
    display: block;
    aspect-ratio: 1;
    -o-object-fit: cover;
    object-fit: cover;
  }
</style>
