---
import { getLangFromUrl, useTranslations } from "../../../data/i18n/utils";

interface Props {
  transition?: string;
}
const { transition } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<img
  src={"/images/me/me.webp"}
  alt={t("me.photo_of")}
  transition:name={transition || "me-photo"}
  class="img"
  onerror="
  this.src = '/images/me/me.jpg'
"
/>

<style>
  .img {
    -webkit-mask: url(../../media/images/bg-photo.svg) no-repeat center;
    mask: url(../../media/images/bg-photo.svg) no-repeat center;
    width: 100%;
    height: 100%;
    display: block;
    aspect-ratio: 1;
    -o-object-fit: cover;
    object-fit: cover;
  }
</style>
