---
import type { IndividualProjectSchema } from "../../../domain/schemas/ProjectsSchema";
interface Props extends IndividualProjectSchema {}

const { id, ...data } = Astro.props;
---

<div class="card">
  <a href={`/project/${id}`} rel="referrer">
    <img
      class="image"
      src={`/images/projects/${id}/${data.images[0]}`}
      alt={`Imagen del proyecto ${data.name}`}
      transition:name=`project-image-${id}`
    />
  </a>
  <div class="description">
    <h4 transition:name=`project-title-${id}`>{data.name}</h4>
    <p transition:name=`project-description-${id}`>{data.description}</p>
  </div>
</div>

<style>
  .image {
    width: 100%;
    height: 240px;
    display: block;
    border-radius: 15px;
    object-fit: cover;
    transition: all 0.2s;
  }
  .image:hover {
    scale: 1.05;
  }
  h4,
  p {
    margin: 0px;
  }
  p {
    color: var(--gray1);
  }
  .description {
    margin-top: 15px;
    padding: 4px;
  }
</style>
