---
import type { WorkSchema } from "../../../domain/schemas/WorkSchema";
import ButtonArrow from "./ButtonArrow.astro";
import DatesArray from "./DatesArray.astro";
import Divider from "./Divider.astro";
import Tooltip from "./Tooltip.astro";
import RightArrow from "./icons/RightArrow.astro";
interface Props extends WorkSchema {}

const data = Astro.props;
---

<div class="card">
  <img
    src={"/images/works/" + data.images[0]}
    alt="Foto de empresa"
    transition:name={`work-${data.name}`}
    class="image"
  />
  <div class="description">
    <div>
      <header>{data.position}</header>
      <p>{data.name}</p>
      <Divider size="15px" />
      <DatesArray dates={data.dates} />
    </div>
    <div>
      <a
        href={`/work/${data.id}`}
        rel="referrer"
        class="link"
        aria-label={`Ir a la descripción de ${data.name}`}
      >
        <Tooltip title="Ver más">
          <RightArrow />
        </Tooltip>
      </a>
    </div>
  </div>
</div>

<style>
  .card {
    width: 90%;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 20px;
    margin: auto;
    padding: 10px 30px;
    border-radius: 16px;
    background-color: var(--bg-color2-opacity);
    height: 100%;
  }
  .image {
    max-width: 350px;
    width: 90%;
    display: block;
    border-radius: 16px;
  }
  .description {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  p {
    margin: 0px;
  }
  header {
    font-size: 25px;
    margin-bottom: 10px;
    font-weight: 500;
  }
  @media (max-width: 740px) {
    .card {
      width: 100%;
    }
  }
</style>
