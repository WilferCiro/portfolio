---
import ImageWEffect from "../../atoms/ImageWEffect.astro";
import ButtonArrow from "../../atoms/ButtonArrow.astro";
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from "../../../../data/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<div class="container">
  <div class="front">
    <p class="greetings">â€” {t("presentation.hello")}</p>
    <h1 transition:name="me-name">Wilfer Daniel Ciro Maya</h1>
    <h2 class="profession" transition:name=`me-profession`>
      {t("generic.fullstack_developer")}
    </h2>
    <h3 class="creator" transition:name="me-description">
      {t("presentation.description")}
    </h3>
    <a href={translatePath("/about")}>
      <ButtonArrow label={t("presentation.know_about_me")} />
    </a>
  </div>
  <div class="photo-container">
    <ImageWEffect />
  </div>
</div>

<style>
  .photo-container {
    width: 32vw;
    height: 32vw;
    margin: auto;
  }
  .bg-name {
    font-size: 250px;
    position: absolute;
    opacity: 0.1;
    margin-top: 30px;
    color: var(--primary-color);
    z-index: inherit;
    z-index: 1;
    overflow-wrap: anywhere;
  }
  .bg-name2 {
    font-size: 250px;
    position: absolute;
    opacity: 0.1;
    margin-top: 230px;
    color: var(--primary-color);
    overflow-wrap: anywhere;
  }

  .container {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 10%;
    width: 80%;
    z-index: 2;
    position: relative;
  }
  h1,
  h2,
  h3 {
    margin: 0px;
  }
  h1 {
    font-size: 50px;
  }
  h2 {
    font-size: 30px;
  }
  h3 {
    font-size: 25px;
  }

  .greetings {
    color: var(--primary-color);
    font-size: 25px;
    font-weight: 600;
    margin: 0px;
  }
  .creator {
    margin-top: 10px;
    font-weight: normal;
    margin-bottom: 50px;
    color: var(--text-color3);
  }
  .profession {
    font-weight: 400;
  }

  @media (min-width: 740px) and (max-width: 1000px) {
    .container {
      flex-direction: column-reverse;
      justify-content: center;
      width: 90%;
      margin: auto;
      text-align: center;
      gap: 40px;
    }
    .photo-container {
      width: 55vw;
      height: 55vw;
      margin: 0px;
    }
  }
  @media (max-width: 740px) {
    .container {
      flex-direction: column-reverse;
      justify-content: center;
      width: 90%;
      margin: auto;
      text-align: center;
      gap: 40px;
    }
    h1 {
      font-size: 35px;
    }
    h4 {
      font-size: 30px;
    }

    .bg-name {
      font-size: 100px;
      margin-top: -20px;
      overflow: hidden;
      width: 90%;
    }
    .bg-name2 {
      font-size: 100px;
      overflow: hidden;
      width: 90%;
    }
    .photo-container {
      width: 65vw;
      height: 65vw;
      margin: 0px;
    }
  }
</style>
