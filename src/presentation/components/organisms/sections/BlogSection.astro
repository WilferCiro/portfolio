---
import { getLangFromUrl, useTranslations } from "../../../../data/i18n/utils";
import Divider from "../../atoms/Divider.astro";
import TitlePage from "../../atoms/TitlePage.astro";
import ListBlog from "../../molecules/ListBlog.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="container">
  <TitlePage title={t("blogs.title")} />
  <Divider />
  <div class="list">
    <ListBlog />
  </div>
</div>

<style>
  .list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  @media (max-width: 1000px) {
    .list {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
